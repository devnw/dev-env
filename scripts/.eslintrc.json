{
  "root": true,
  "env": {
    "es2021": true,
    "node": true,
    "browser": false
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "ignorePatterns": [
    "**/*.go",
    "**/*.mod",
    "**/*.sum",
    "node_modules/",
    "dist/",
    "build/",
    "coverage/",
    "site/",
    "docs/site/",
    "test_site/",
    "**/*.min.js"
  ],
  "rules": {}
}
